@inject IJSRuntime js

<header class="header" id="header">
    <Container>
        <Logo />
        <Menu @ref=menu MenuLinkClick="LinkClick"/>
        <Telephone />
        <Burger OnClick="ToggleMenu" @ref=burger/>
    </Container>
</header>

@code {
    private Menu? menu;
    private Burger? burger;

    private async void ToggleMenu()
    {
        burger?.ToggleBurger();
        menu?.ToggleMenu();
        await js.InvokeVoidAsync("scrollToggle");
    }

    private void LinkClick()
    {
        if (burger.Active)
        {
            ToggleMenu();
        }
    }
}
