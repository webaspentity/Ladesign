<button 
    class=@((Order == Current) ? "carousel__bullet active" : "carousel__bullet") 
    type="button" 
    aria-label="Перейти к слайду" 
    @onclick="UpdateCurrentValue">
</button>

@code {
    [Parameter]
    public int Current { get; set; }
    [Parameter]
    public int Order { get; set; }
    [Parameter]
    public EventCallback<int> CurrentChanged { get; set; }

    private async Task UpdateCurrentValue()
    {
        Current = Order;
        await CurrentChanged.InvokeAsync(Current);
    }
}
